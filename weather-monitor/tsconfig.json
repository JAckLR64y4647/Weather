{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@/*": ["./resources/js/*"],
        },
        "types": ["vite/client", "vitest/globals"],
        "moduleResolution": "node",
        "verbatimModuleSyntax": false
    },
    "include": [
        "./resources/js//*.ts",
        "./resources/js//*.d.ts",
        "./resources/js//*.tsx",
        "./resources/js//*.vue",
        "./components.d.ts"
    ],
    "exclude": [
        "./resources/js/node_modules",
        "./public/dist"
    ],
    "types": ["resources/js/types.ts"]
}
